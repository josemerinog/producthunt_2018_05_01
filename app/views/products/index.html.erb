<div class="container">
	<div class="row">
		<div class="col-sm-12">
			
			<h1>Productos</h1>

			<div class="text-right">
				<%= link_to "Publicar Producto", new_product_path, class: "btn btn-primary" %>
			</div>

			<table class="table">
				<tr>
					
					<th>Id</th>
					<th>Nombre</th>
					<th>URL</th>
					<th>Descripcion</th>
					<th></th>

				</tr>

				<% @products.each do |producto|  %>
				<tr>
					<td><%= producto.id %></td>
					  <td><%= link_to producto.name, producto %></td>
					  <td><%= producto.url %></td>
					  <td><%= producto.description %></td>  
					  <td><%= link_to "Editar", edit_product_path(producto) %></td>  
				</tr>
				<% end %>

			</table>

		</div>
	</div>
</div>

